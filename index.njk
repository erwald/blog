<div>
    {% for post in collections.post | sort(attribute = 'date') | reverse %}
        <div class="post-abbrev-body">
            <h2 class="post-abbrev-title">
                <a href="{{ post.url }}">{{  post.data.title }}</a>
                <span class="post-abbrev-date">{{ post.date | readableDate }}</span>
            </h2>
            <div>{{ post.templateContent | abbrev | safe }}</div>
            <div><a href="{{ post.url }}">Read more â†’</a></div>
        </div>
    {% endfor %}
</div>
