---
layout: layouts/base.njk
pagination:
  data: collections.post
  size: 10
  reverse: true
  alias: posts
---
<div>
    {% for post in posts %}
        <div class="post-abbrev-body">
            <h2 class="post-abbrev-title">
                <a href="{{ post.url }}">{{  post.data.title }}</a>
                <span class="post-abbrev-date">{{ post.date | readableDate }}</span>
            </h2>
            <div>{{ post.templateContent | abbrev | safe }}</div>
            <div><a href="{{ post.url }}">Read more →</a></div>
        </div>
    {% endfor %}
    {% if pagination.previous %}<a href={{ pagination.previous | url }}>← Previous Page</a>{% endif %}
    {% for pageEntry in pagination.pages %}
        {% if page.url == pagination.hrefs[ loop.index0 ] %}
            ⌈{{ loop.index }}⌋
        {% else %}
            <a href="{{ pagination.hrefs[ loop.index0 ] }}">{{ loop.index }}</a>
        {% endif %}
    {% endfor %}
    {% if pagination.next %}<a href={{ pagination.next | url }}>Next Page →</a>{% endif %}
</div>
